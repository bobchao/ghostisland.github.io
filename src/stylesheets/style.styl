@import 'nib'
@import 'settings'

html
  font-size: 10px

body
  font-size: 1.6rem
  color: $text-color
  background: $background-color

a
  color: $text-color

.container
  width: 600px
  margin: 0 auto

.clear-list-style
  list-style: none
  margin: 0
  padding: 0

.clear-list-style > li
  margin-bottom: 1.6em

.p-main
  clearfix()
  margin-top: 48px
  margin-bottom: 36px

.p-header
  position: relative
  text-align: center

  &:after
    content: ''
    position: absolute
    left: 0
    bottom: -2em
    width: 100%
    height: 0
    border-bottom: 1px $border-color solid

.p-title
.p-subtitle
  margin: 0
  line-height: 1em

.p-title
  font-size: 5.2rem
  margin-bottom: 10px

.p-subtitle
  font-size: 1.6rem
  font-family: 'Tinos', serif
  margin-bottom: 52px

.p-content
  position: relative
  line-height: 1.6em
  padding-top: 1.6em
  text-align: justify

.p-content p
  margin: 0
  margin-top: 1.6em
  margin-bottom: 1.6em

.content-start
  position: absolute
  top: -3.6em
  left: 0
  width: 100%
  height: 1em
  text-align: center

.content-start-center
  display: inline-block
  background: $background-color
  padding: 0 1em

.p-copyright
  text-align: right
  font-size: 1.2rem
  margin-bottom: 72px

  ul
    list-style: none
    margin: 0
    padding: 0

  li
    display: inline-block
    margin-left: 8px

@import '600px'
